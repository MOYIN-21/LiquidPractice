<section style="background-color:{{ section.settings.announcement_bg_color }}; color:{{ section.settings.announcement_text_color }}" class="bg-pink-200 w-full px-4">
  <div
    class="container flex justify-center items-center h-10 lg:justify-between"
  >
    {% if section.blocks.size != 0 %}
      {% for block in section.blocks %}
        {%  case block.type %}
          {% when "announcement-block" %}
              <a href="#" class="announcement block font-medium text-sm"
      >{{ block.settings.announcement_text }}</a
    >            
        {% endcase %}
        
      {% endfor %}
      
    {% else %}
    
    <a href="#" class="announcement hidden font-medium text-sm lg:block"
      >Shop New in</a
    >
    <a href="#" class="announcement hidden font-medium text-sm lg:block"
      >Free Delivery over $100</a
    >
    <a href="#" class="announcement hidden font-medium text-sm lg:block"
      >Store locator</a
    >
    {% endif %}
  </div>
</section>

{% schema %}
  {
    "name": "Announcement",
    "class": "announcement",
    "limit": 1,
    "settings": [
      {
        "type": "header",
        "content": "color Settings"
      },
      {
      "type": "color",
      "id": "announcement_bg_color",
      "label": "Background Color",
      "default": "#000000"
    },
      {
      "type": "color",
      "id": "announcement_text_color",
      "label": "text Color",
      "default": "#ffffff"
    }
    
    ],
    "blocks": [
      {
      "name": "announcement block",
      "type": "announcement-block",
      "limit": 4,
      "settings": [
        {
        "type": "text",
      "id": "announcement_text",
      "label": "Announcement",
      "default": "This is an announcement"
      }
      ]
    }
    ],
    
  }
{% endschema %}
